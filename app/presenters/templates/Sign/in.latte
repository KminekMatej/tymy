{import '../components/unsecured.latte'}
{var $title = 'Login'}
{block content}
<div class="container">
    
    <div class="row justify-content-md-center">
        <div class="col-md-4 sh-box bg-light p-5 my-5">
            {*<h2 class="mb-3">{$tym|firstUpper} | Tymy.CZ</h2>*}
            {form signInForm}
                <div class="row">
                    <div class="col">{input name}</div>
                </div>
                <div class="row">
                    <div class="col">{input password}</div>
                </div>
                <div class="row" n:if="$multiple">
                    <div class="col">{input team}</div>
                </div>
                <div class="row">
                    <div class="col">{input send}</div>
                </div>
                <div class="row">
                    <div class="col-6"><a href="{plink Sign:up}">Registrovat</a></div>
                    <div class="col-6"><a href="{plink Sign:pwdlost}">Ztracen√© heslo</a></div>
                </div>
            {/form}
        </div>
    </div>
</div>